@model TaskFrontEnd.Models.Department
@{
    var title = "Create New Department";
}
@if (Model.depId != 0)
{
    title = "Edit Department";
}
<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="depId" />
    <div class="row border">
        <div class="col-12" border-bottom>
            <h2 class="text-primary">@title</h2>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="dname"></label>
            </div>
            <div class="col-8">
                <input asp-for="dname" class="form-control" />
                <span asp-validation-for="dname" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4">
            <button type="submit" class="btn btn-primary form-control">
                @(Model.depId != 0?"update":"create")
            </button>
        </div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
        </div>
    </div>
</form>

@section Scripts
{
    <partial name="_validationScriptsPartial" />
}